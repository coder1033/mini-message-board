extends layout

block content
  form(method="POST" action="/new")
    h2 New Message Board
    input(
      type="name",
      name="name",
      placeholder="enter name",
      autocomplete="off",
      minlength="3",
      maxlength="30",
      required
    )
    br
    textarea(
      name="message",
      placeholder="enter message",
      autocomplete="off",
      maxlength="200",
      required
    )
    br
    button(type="submit") Add