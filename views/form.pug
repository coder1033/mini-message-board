extends layout

block content
  div.container.mt-3
    form(method="POST" action="/new")
      div.form-group
        label(for="name") Name
        input(
          type="name",
          name="name",
          placeholder="enter name",
          autocomplete="off",
          minlength="3",
          maxlength="30",
          required
        ).form-control
      
      div.form-group
        label(for="message") Message
        textarea(
          name="message",
          placeholder="enter message",
          autocomplete="off",
          maxlength="200",
          required
        ).form-control
      
      button(type="submit").btn.btn-warning.btn-sm Add